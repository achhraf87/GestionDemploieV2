@model IEnumerable<GestionDemploie.Filiere>

@{
    ViewBag.Title = "Index";
}

<div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                        Total Filières
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalCount</div>
                </div>
                <div class="col-auto">
                    <h1><i class="fa-solid fa-landmark fa-beat-fade fa-xs"></i> </h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex">

    <div class="ml-auto p-2">
        <a href="~/Filieres/Create" class="btn btn-primary btn-sm">Ajouter Une filiére</a>
    </div>
</div>

<br />

<div class="card shadow mb-4">
    
    <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse"
       role="button" aria-expanded="true" aria-controls="collapseCardExample">
        <h6 class="m-0 font-weight-bold text-primary">Les Filières</h6>
    </a>
    
    <div class="collapse show" id="collapseCardExample">
        <div class="card-body">
            <table class="table">

                @foreach (var item in Model)

                 {
                    <tr>
                        <td>
                            @item.NomFiliere.ToString() 
                        </td>
                        <td>
                         
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmationModal-@item.idFiliere">
                                <i class="fa-solid fa-trash" style="color: #ffffff;"></i>
                            </button>


                            <div class="modal fade" id="confirmationModal-@item.idFiliere" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel-@item.idFiliere" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="confirmationModalLabel-@item.idFiliere"><i class="fa-solid fa-triangle-exclamation" style="color: #ffc800;"></i> Confirmation de suppression  </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Êtes-vous sûr de vouloir supprimer cet enregistrement ?</p>
                                            <h2>@item.NomFiliere</h2>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                            <form method="post" action="@Url.Action("Delete", "Filieres")">
                                                @Html.AntiForgeryToken()
                                                @Html.Hidden("id", item.idFiliere)
                                                <button type="submit" class="btn btn-danger">Supprimer</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </td>
                    </tr>
                 }

            </table>
        </div>
    </div>
</div>



<style>
    h2 {
        color: #333;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    p {
        margin-bottom: 10px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f2f2f2;
        }

        .table td {
            vertical-align: middle;
        }

        .table a {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px;
        }

            .table a:hover {
                text-decoration: underline;
            }
</style>

<script>
    $(document).ready(function() {
        // Open modal when delete button is clicked
        $(".delete-button").on("click", function() {
            var recordId = $(this).data("record-id");
            $("#confirmDelete").attr("data-record-id", recordId);
            $("#deleteModal").show();
        });

        // Close modal when close button is clicked
        $(".close").on("click", function() {
            $("#deleteModal").hide();
        });

        // Delete record when Delete button inside the modal is clicked
        $("#confirmDelete").on("click", function() {
            var recordId = $(this).data("record-id");

            // Perform AJAX delete request to your controller action
            $.ajax({
                url: "@Url.Action("Delete", "Filieres")",
                type: "POST",
                data: { id: recordId },
                success: function() {
                    // Reload the page to refresh the record list
                    location.reload();
                },
                error: function() {
                    // Handle error
                    // ...
                }
            });

            $("#deleteModal").hide();
        });
    });
</script>