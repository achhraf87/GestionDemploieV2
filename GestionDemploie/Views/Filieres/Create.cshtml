@model GestionDemploie.Filiere

@{
    ViewBag.Title = "Create";
}


<div id="error-alert" class="alert alert-danger" style="display: none;">
    <h5 class="mb-0 font-weight-bold text-gray-800" id="error-message"> </h5>
</div>


@using (Html.BeginForm())

 {
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
       
        <div class="control-label col-md-2">
            Filiére <i class="fa-solid fa-landmark"></i>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NomFiliere, new { htmlAttributes = new { @class = "form-control" } }) 
            @Html.ValidationMessageFor(model => model.NomFiliere, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10"> 
                <button type="submit" value="Ajouter" class="btn btn-secondary btn-sm">Ajouter</button> 
            </div>
        </div>
    </div>

    <style>

        .form-horizontal {
            max-width: 1020px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f2f2f2;
            border-radius: 5px;
        }

        .form-horizontal h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 15px;
        }


        .hr {
            height: 1px;
            background-color: #ccc;
            border: none;
            margin: 20px 0;
        }

        .text-danger {
            color: red;
        }

        .form-group {
            margin-bottom: 20px;
        }


        .control-label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
            transition: border-color 0.3s ease-in-out;
        }


            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.25);
            }

        .text-danger.validation-message {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }


        .btn {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            border: none;
            transition: background-color 0.3s ease-in-out;
        }

        .btn-default {
            background-color: #ccc;
            color: #333;
        }

        .btn:hover {
            background-color: #0069d9;
        }
    </style>
 }




<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>

    var errorMessage = "@ViewBag.msg";

    if (errorMessage !== null && errorMessage !== '') {

        $('#error-message').text(errorMessage);

        $('#error-alert').show();
    }

</script>
}
